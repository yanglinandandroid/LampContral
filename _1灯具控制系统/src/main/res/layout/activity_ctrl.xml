<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@android:id/tabhost"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"></FrameLayout>
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone"/>

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/b"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:text=""/>

            <RadioButton
                android:id="@+id/radio_button0"
                style="@style/main_tab_bottom"
                android:layout_marginTop="0dip"
                android:drawableTop="@drawable/a1"
                android:tag="radio_button0"/>

            <RadioButton
                android:id="@+id/radio_button1"
                style="@style/main_tab_bottom"
                android:layout_marginTop="0dip"
                android:drawableTop="@drawable/a2"
                android:tag="radio_button1"/>

            <RadioButton
                android:id="@+id/radio_button2"
                style="@style/main_tab_bottom"
                android:layout_marginTop="0dip"
                android:drawableTop="@drawable/a4"
                android:tag="radio_button2"/>

            <RadioButton
                android:id="@+id/radio_button3"
                style="@style/main_tab_bottom"
                android:layout_marginTop="0dip"
                android:drawableTop="@drawable/a3"
                android:tag="radio_button3"/>

            <RadioButton
                android:id="@+id/radio_button4"
                style="@style/main_tab_bottom"
                android:layout_marginTop="0dip"
                android:drawableTop="@drawable/a5"
                android:tag="radio_button4"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="\tSmartLight  v1.1 \n\twww.sansitech.com"/>

        </RadioGroup>
    </LinearLayout>
</TabHost>