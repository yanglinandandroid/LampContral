<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dip"
  android:background="@drawable/bg"    >

    <com.example.view.DragGridViewLight
        android:id="@+id/drag_grid_light"
        android:layout_width="1100dp"
        android:layout_height="539dp"
        android:layout_x="4dp"
        android:layout_y="85dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" >
    </com.example.view.DragGridViewLight>

    <TextView
        android:id="@+id/text_delete_light"
       android:layout_width="fill_parent"
        android:layout_height="712dp"
        android:layout_x="-2dp"
        android:layout_y="626dp"
        android:background="#20ff0000"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20dip"
        android:visibility="invisible" />
    
     <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="#7c7c7c"
        android:text="" />

    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_x="1184dp"
        android:layout_y="-5dp"
        android:background="@drawable/button_style_add"
        android:onClick="onClick" />
    
    
   <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="581dp"
        android:layout_y="625dp"
        android:src="@drawable/delete"
        android:visibility="invisible" />

</AbsoluteLayout >