<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1600dp"
    android:layout_height="1000dp"
    android:orientation="vertical" >

   <EditText
        android:id="@+id/scene_id_add"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="272dp"
        android:layout_y="75dp"
         android:numeric="integer"
        android:ems="10" />

    <TextView
        android:id="@+id/lig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="75dp"
        android:text="Scene ID:"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="26dp"
        android:text="Scene Name:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/scene_name_add"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="272dp"
        android:layout_y="23dp"
        android:ems="10" />

    <ListView
        android:id="@+id/listView_scene_light"
        android:layout_width="508dp"
        android:layout_height="194dp"
        android:layout_x="44dp"
        android:layout_y="125dp" >
    </ListView>

</AbsoluteLayout>